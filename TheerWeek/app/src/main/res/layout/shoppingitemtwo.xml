<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/checked_shoppingitem"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:gravity="center_vertical" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_shoppingitem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="55" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/price_shoppingitem"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="55" />

            <com.bw.xuhongtaoweek.view.widget.AdderClass
                android:id="@+id/adder"
                android:layout_width="150dp"
                android:layout_height="wrap_content"></com.bw.xuhongtaoweek.view.widget.AdderClass>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>