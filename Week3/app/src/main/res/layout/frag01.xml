<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.bw.yq.wigwet.Sousuo
            android:id="@+id/so"
            android:layout_width="match_parent"
            android:layout_height="50dp"></com.bw.yq.wigwet.Sousuo>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="150dp"></android.support.v4.view.ViewPager>


        </RelativeLayout>

        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@+id/xrlv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.jcodecraeer.xrecyclerview.XRecyclerView>

        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@+id/rlv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"></com.jcodecraeer.xrecyclerview.XRecyclerView>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>